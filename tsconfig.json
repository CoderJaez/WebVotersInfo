{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "./dir",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@shared/components/*":["shared/components/partials/*","shared/components/partials"],
      "@shared/layouts/*":["shared/components/layouts/*","shared/components/layouts"],
      "@assets/*":["assets/*"],
      "@pages/*":["pages/*", "pages"],
      "@components/*":["components/*"],
      "@routes/*":["routes/*"],
      "@services/*":["services/*"],
      "@hooks/*":["hooks/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["src", "public"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
